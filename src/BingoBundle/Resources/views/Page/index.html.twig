{% extends 'BingoBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h1>{{ name }}!</h1>

            <p>This page is runing with Symfony {{ version }}</p>
        </div>
    </div>
    <div class="container" ng-init="getGames()" ng-controller="BingoGamesController" ng-cloak>
        <!--
        <div class="clearfix"></div>
        <pre>gamesData: {[ games|json ]}</pre>
        <div class="clearfix"></div>
        -->
        <table class="table table-striped table-hover" ng-show="games">
            <thead>
            <tr>
                <td>#</td>
                <td>Slug</td>
                <td>Name</td>
                <td>Action</td>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <td>#</td>
                <td>Slug</td>
                <td>Name</td>
                <td>Action</td>
            </tr>
            </tfoot>
            <tbody>
            <tr ng-repeat="(row, game) in games">
                <td>{[ game.id ]}</td>
                <td>{[ game.slug ]}</td>
                <td>{[ game.name ]}</td>
                <td><a href="{{ path(app.request.attributes.get('_route')) }}game/{[ game.slug ]}">open</a></td>
            </tr>
            </tbody>
        </table>
        <p class="bg-info" ng-hide="games">No <strong>Games</strong> found!</p>
        {#
        {% include 'BingoBundle::_loader.html.twig' %}
        #}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {#
    {% javascripts
        '@BingoBundle/Resources/public/app/controller/games.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    #}
    <script src="/bundles/bingo/app/controller/games.js"></script>
{% endblock %}
