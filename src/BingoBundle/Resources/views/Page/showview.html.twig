{% extends 'BingoBundle::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/bundles/bingo/css/bingoshowview.css">
{% endblock %}

{% block body %}
    <div id="buzzwordText" class="buzzwordTextEmpty"></div>
    <div style="width: 1340px; overflow: hidden; margin-bottom: 0px">
        <div style="float: left; overflow: hidden; margin-bottom: 0px" id="card">
            <div style="width: 110px;  float: left">
                <table id="logoverti">
                    <tr>
                        <td><img src="/bundles/bingo/img/bingo_b.svg"></td>
                    </tr>
                    <tr>
                        <td><img src="/bundles/bingo/img/bingo_i.svg"></td>
                    </tr>
                    <tr>
                        <td><img src="/bundles/bingo/img/bingo_n.svg"></td>
                    </tr>
                    <tr>
                        <td><img src="/bundles/bingo/img/bingo_g.svg"></td>
                    </tr>
                    <tr>
                        <td><img src="/bundles/bingo/img/bingo_o.svg"></td>
                    </tr>
                    <tr>
                        <td><img src="/bundles/bingo/img/dollar_o.svg"></td>
                    </tr>
                    <tr>
                        <td><img src="/bundles/bingo/img/dollar.svg"></td>
                    </tr>
                </table>
            </div>
            <div style="width: 750px; float: left; margin-right: 0px; margin-bottom: 0px" class="resize">
                <table id="BingoBody"></table>
            </div>
        </div>

        <div style="width: 470px; float: left; margin-left: 8px; margin-bottom: 0px" overflow: hidden; class="resize" id="logohori">
            <div style="width: 100%; margin-left: 0px; overflow: visible;">
                <table>
                    <tr>
                        <td id="score">
                            <div style="width: 120px;" id="mischen">&nbsp</div>
                        </td>
                        <td id="reset" class="reset" style="width: 120px;">
                            <div class="reset" style="width: 120px; margin-left: 35px; margin-left: 15px">&nbsp</div>
                        </td>
                        <td id="start" style="width: 120px;">
                            <div id="counter">&nbsp</div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div style="margin-left: 870px; margin-bottom: 0px; margin-top: 276px" overflow: visible; class="resize">
            <table id="BuzzwordsBody">
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/bundles/bingo/js/scriptshowview.js"></script>
    <script type="text/javascript" src="/bundles/bingo/js/winboards.js"></script>
    <script type="text/javascript" src="/bundles/bingo/js/buzzwordtext.js"></script>
{% endblock %}
